<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSSS}][spot-service][%thread][%-4level][%logger][%file:%line][%m]%n</pattern>
        </encoder>
    </appender>

    <appender name="studyDemo" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>log/studyDemo.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>log/studyDemo.%d.%i.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSSS}][spot-service][%thread][%-4level][%file:%line][%m]%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <logger name="java.sql.PreparedStatement" value="DEBUG"/>
    <logger name="org.apache.kafka" value="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="studyDemo"/>
    </root>
</configuration>  